<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Echelon</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Echelon.styles.css" asp-append-version="true" />
    <style>
        /* Global Styles */
        body {
            background-color: #f4f4f4; /* Light grey background for the body */
            color: #333; /* Dark text color for better readability */
            font-family: Arial, sans-serif; /* Consistent font family */
        }

        header {
            background-color: #fff; /* White background for the header */
            margin: 20px auto; /* Margin from the top and auto margin for left and right */
            max-width: 1200px; /* Max width for the header */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for 3D effect */
        }

        .navbar {
            padding: 1rem 1.5rem; /* Increase padding for a larger navbar */
        }

        .navbar-brand {
            font-weight: bold; /* Bold font for the brand */
            color: #4682b4; /* Steel blue color for the brand */
            font-size: 1.5rem; /* Larger font size for the brand */
        }

        .navbar-brand:hover {
            color: #4169e1; /* Royal blue color on hover */
        }

        .navbar-nav .nav-link {
            color: #333; /* Dark color for nav links */
            font-weight: 500; /* Medium weight font for nav links */
            font-size: 1.1rem; /* Slightly larger font size for nav links */
        }

        .navbar-nav .nav-link:hover {
            color: #4682b4; /* Steel blue color on hover */
        }

        footer {
            background-color: #fff; /* White background for the footer */
            padding: 1.5rem 1rem; /* Increased padding for the footer */
            border-top: 1px solid #ddd; /* Light grey border on top of the footer */
            box-shadow: 0 -4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for 3D effect */
            text-align: center; /* Center align the text in the footer */
        }

        footer a {
            color: #4682b4; /* Steel blue color for footer links */
            font-weight: bold; /* Bold font for footer links */
        }

        footer a:hover {
            color: #4169e1; /* Royal blue color on hover */
        }

        .footer-brand {
            color: #4682b4; /* Steel blue color for the brand in the footer */
            font-weight: bold; /* Bold font for the brand */
            font-size: 1.5rem; /* Larger font size for the brand */
        }

        .footer-brand:hover {
            color: #4169e1; /* Royal blue color on hover */
        }

        .container {
            max-width: 1200px; /* Max width for the main container */
            margin: auto; /* Center the container */
        }

        main {
            padding: 1rem; /* Padding for the main content area */
            background-color: #fff; /* White background for the main content */
            border-radius: 8px; /* Rounded corners for the main content area */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow around the main content */
        }

        .highlight-blue {
            color: #4682b4; /* Steel blue color used in other pages */
            font-weight: bold; /* Make the text bold */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E<span class="highlight-blue">ch</span>elon</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <span class="footer-brand">E<span class="highlight-blue">ch</span>elon</span> &copy; 2024 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
