 @model IEnumerable<Echelon.Models.Inventory>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: white; /* White background */
        color: #333; /* Dark text color for better readability */
        font-family: Arial, sans-serif; /* Consistent font family */
    }

    h1 {
        color: #4682b4; /* Steel blue color for the heading */
        text-align: center; /* Center the heading text */
        margin-bottom: 20px; /* Space below the heading */
    }

    p {
        text-align: center; /* Center-align the paragraph */
        margin-top: 20px; /* Space above the paragraph */
    }

    .table {
        width: 100%; /* Full width for the table */
        border-collapse: collapse; /* Collapse borders for a cleaner look */
        margin: auto; /* Center the table */
        max-width: 1200px; /* Max width for the table */
    }

        .table th, .table td {
            border: 1px solid #ddd; /* Light grey border for table cells */
            padding: 12px; /* Padding inside table cells */
            text-align: left; /* Left-align text in table cells */
        }

        .table th {
            background-color: #4682b4; /* Steel blue background for table headers */
            color: white; /* White text color for headers */
            font-weight: bold; /* Bold text for headers */
        }

        .table td {
            background-color: #f9f9f9; /* Light background for table rows */
        }

        .table tr:nth-child(even) td {
            background-color: #f2f2f2; /* Alternating row color (light grey) */
        }

        .table tr:nth-child(even):hover td {
            background-color: #e6e6e6; /* Lighter grey on hover for alternating rows */
        }

        .table tr:nth-child(odd):hover td {
            background-color: #f0f0f0; /* Lighter shade of light grey on hover for odd rows */
        }

        .table a {
            color: #4682b4; /* Steel blue color for links */
            text-decoration: none; /* Remove underline from links */
            font-weight: bold; /* Bold text for links */
        }

            .table a:hover {
                text-decoration: underline; /* Underline links on hover */
            }

    .btn-create {
        background-color: #4682b4; /* Steel blue background for the create button */
        color: white; /* White text color for the button */
        padding: 10px 20px; /* Padding for better button size */
        border: none; /* Remove border */
        border-radius: 4px; /* Rounded corners for the button */
        text-decoration: none; /* Remove underline from links */
        font-weight: bold; /* Bold text for emphasis */
        display: inline-block; /* Inline-block display for alignment */
    }

        .btn-create:hover {
            background-color: #87ceeb; /* Light blue background on hover */
        }

</style>

<h1>Inventory</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SerialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profit)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SellPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Profit)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn-create">Create New</a>
</p>
