@model Echelon.Models.Inventory

@{
    ViewData["Title"] = "Details";
}

<style>
    body {
        background-color: white; /* White background */
        color: #333; /* Dark text color for better readability */
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #4682b4; /* Steel blue color for the heading */
        text-align: center; /* Center the heading text */
        margin-bottom: 20px; /* Space below the heading */
    }

    h4 {
        color: #4682b4; /* Steel blue color for the subheading */
        margin-bottom: 20px; /* Space below the subheading */
    }

    .form-container {
        display: flex;
        flex-direction: column; /* Stack rows vertically */
        gap: 20px; /* Space between rows */
        max-width: 800px; /* Max width for the form container */
        margin: auto; /* Center the container */
        padding: 20px;
        background-color: #fff; /* White background for the form container */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    dl {
        margin: 0; /* Remove default margin */
    }

    dt, dd {
        margin: 0; /* Remove default margin */
        padding: 0; /* Remove default padding */
    }

    dt {
        font-weight: bold;
        color: #4682b4; /* Steel blue color for labels */
        margin-bottom: 5px; /* Reduced space below the label */
        display: inline-block; /* Ensure labels are inline with data */
        width: 150px; /* Fixed width for labels */
    }

    dd {
        background-color: #f9f9f9; /* Light background for values */
        padding: 10px;
        border-radius: 4px; /* Rounded corners for values */
        margin-bottom: 20px; /* Space below each value */
        display: inline-block; /* Ensure values are inline with labels */
        width: calc(100% - 160px); /* Adjust width to align with labels */
    }

    .btn-secondary {
        background-color: #f0f0f0; /* Light grey background for the secondary button */
        border-color: #ccc; /* Light grey border */
        color: #333; /* Dark text color */
        padding: 10px 20px; /* Padding for better button size */
        text-decoration: none; /* Remove underline from links */
        border-radius: 4px; /* Rounded corners for the button */
    }

        .btn-secondary:hover {
            background-color: #e0e0e0; /* Slightly darker grey on hover */
            border-color: #bbb; /* Slightly darker grey border on hover */
        }

    .btn-edit {
        background-color: #28a745; /* Green background for the edit button */
        border-color: #28a745; /* Same color for the border */
        color: #fff; /* White text color for the button */
        padding: 10px 20px; /* Padding for better button size */
        text-decoration: none; /* Remove underline from links */
        border-radius: 4px; /* Rounded corners for the button */
    }

        .btn-edit:hover {
            background-color: #218838; /* Darker green on hover */
            border-color: #1e7e34; /* Darker green border on hover */
        }

    .form-actions {
        display: flex;
        justify-content: center; /* Center-align the buttons */
        gap: 10px; /* Space between buttons */
        margin-top: 20px;
    }

    hr {
        border: 0;
        border-top: 1px solid #ccc; /* Light grey line for the horizontal rule */
    }

    .text-danger {
        color: #d9534f; /* Bootstrap danger color for validation messages */
    }
</style>

<h1>User Details</h1>

<div class="form-container">
    <dl>
        <div>
            <dt>
                @Html.DisplayNameFor(model => model.SerialNo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SerialNo)
            </dd>
        </div>
        <div>
            <dt>
                @Html.DisplayNameFor(model => model.ProductName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>
        </div>
        <div>
            <dt>
                @Html.DisplayNameFor(model => model.CostPrice)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CostPrice)
            </dd>
        </div>
        <div>
            <dt>
                @Html.DisplayNameFor(model => model.SellPrice)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SellPrice)
            </dd>
        </div>
        <div>
            <dt>
                @Html.DisplayNameFor(model => model.Discount)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Discount)
            </dd>
        </div>
        <div>
            <dt>
                @Html.DisplayNameFor(model => model.Profit)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Profit)
            </dd>
        </div>
    </dl>
</div>

<div class="form-actions">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-edit">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
