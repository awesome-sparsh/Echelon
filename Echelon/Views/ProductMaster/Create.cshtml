@model Echelon.Models.ProductMaster

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: white; /* White background */
    }

    /* Center the card container */
    .card-container {
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: flex-start; /* Align items to the top */
        min-height: 100vh; /* Make it take the full viewport height */
    }

    .card {
        width: 100%; /* Ensure it fits within container */
        max-width: 600px; /* Set max width for the card */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Light shadow for card */
    }

    .card-header {
        background-color: #4682b4; /* Steel blue header */
        color: white; /* White text for header */
        font-size: 1.5rem; /* Larger font size */
        text-align: center; /* Center-align header text */
    }

    .card-body {
        padding: 40px; /* Add padding inside the card */
        margin-bottom: 10px; /* Add margin at the bottom of the card body */
        padding-bottom: 10px;
    }

    .form-group label {
        font-weight: bold;
        color: #4682b4; /* Steel blue labels */
    }

    .form-control {
        border-radius: 4px;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .form-actions {
        display: flex;
        justify-content: center; /* Center-align buttons */
        gap: 15px; /* Space between buttons */
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #4682b4; /* Steel blue button */
        border-color: #4682b4;
        color: #fff;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
    }

        .btn-primary:hover {
            background-color: #4169e1; /* Hover color */
        }

    .btn-secondary {
        background-color: #f0f0f0;
        border-color: #ccc;
        color: #333;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 4px;
    }

        .btn-secondary:hover {
            background-color: #e0e0e0;
        }

    .text-danger {
        color: #d9534f;
    }
</style>

<div class="card-container">
    <div class="card">
        <div class="card-header">
            Create Product
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ManufacturerCode" class="control-label">Manufacturer Code</label>
                    <input asp-for="ManufacturerCode" class="form-control" />
                    <span asp-validation-for="ManufacturerCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProductName" class="control-label">Product Name</label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Specifications" class="control-label">Specifications</label>
                    <input asp-for="Specifications" class="form-control" />
                    <span asp-validation-for="Specifications" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PurchasePrice" class="control-label">Purchase Price</label>
                    <input asp-for="PurchasePrice" class="form-control" />
                    <span asp-validation-for="PurchasePrice" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ListPrice" class="control-label">List Price</label>
                    <input asp-for="ListPrice" class="form-control" />
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>

                <div class="form-actions">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
